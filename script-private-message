local dragging=false
local dragStart
local startPos
main.InputBegan:Connect(function(input)
 if input.UserInputType==Enum.UserInputType.MouseButton1 then
  dragging=true
  dragStart=input.Position
  startPos=main.Position
 end
end)
main.InputEnded:Connect(function(input)
 if input.UserInputType==Enum.UserInputType.MouseButton1 then
  dragging=false
 end
end)
UIS.InputChanged:Connect(function(input)
 if dragging and input.UserInputType==Enum.UserInputType.MouseMovement then
  local delta=input.Position-dragStart
  main.Position=UDim2.new(startPos.X.Scale,startPos.X.Offset+delta.X,startPos.Y.Scale,startPos.Y.Offset+delta.Y)
 end
end)
local spamming=false
local randomMode=false
local randLenBox=Instance.new("TextBox")
randLenBox.Size=UDim2.fromScale(0.4,0.14)
randLenBox.Position=UDim2.fromScale(0.05,0.95)
randLenBox.BackgroundColor3=Color3.fromRGB(20,20,30)
randLenBox.TextColor3=Color3.fromRGB(220,220,255)
randLenBox.Font=Enum.Font.GothamBold
randLenBox.TextScaled=true
randLenBox.Text="1"
randLenBox.ClearTextOnFocus=false
randLenBox.Parent=main
local rlCorner=Instance.new("UICorner")
rlCorner.CornerRadius=UDim.new(0,14)
rlCorner.Parent=randLenBox
local charsetBox=Instance.new("TextBox")
charsetBox.Size=UDim2.fromScale(0.4,0.14)
charsetBox.Position=UDim2.fromScale(0.55,0.95)
charsetBox.BackgroundColor3=Color3.fromRGB(20,20,30)
charsetBox.TextColor3=Color3.fromRGB(220,220,255)
charsetBox.Font=Enum.Font.GothamBold
charsetBox.TextScaled=true
charsetBox.Text="abcdefghijklmnopqrstuvwxyz"
charsetBox.ClearTextOnFocus=false
charsetBox.Parent=main
local csCorner=Instance.new("UICorner")
csCorner.CornerRadius=UDim.new(0,14)
csCorner.Parent=charsetBox
local hue=0
local function fire()
 local msg=prefixBox.Text~="" and (prefixBox.Text.." "..box.Text) or box.Text
 if randomMode then
  local len=math.clamp(tonumber(randLenBox.Text) or 1,1,50)
  local chars=charsetBox.Text
  local extra=""
  for i=1,len do
   local idx=math.random(1,#chars)
   extra=extra..string.sub(chars,idx,idx)
  end
  msg=msg.." "..extra
 end
 local color
 if rainbow then
  hue=(hue+0.02)%1
  color=Color3.fromHSV(hue,1,1)
 else
  color=parseColor(colorBox.Text)
 end
 ReplicatedStorage.RequestGlobalAlert:FireServer(msg,color)
end
send.MouseButton1Click:Connect(function()
 fire()
end)
rainbowBtn.MouseButton1Click:Connect(function()
 rainbow=not rainbow
 rainbowBtn.Text=rainbow and "RAINBOW ON" or "RAINBOW"
end)
clear.MouseButton1Click:Connect(function()
 box.Text=""
end)
randomize.MouseButton1Click:Connect(function()
 randomMode=not randomMode
 randomize.Text=randomMode and "RANDOM ON" or "RANDOMIZE"
end)
spam.MouseButton1Click:Connect(function()
 spamming=not spamming
 spam.Text=spamming and "STOP SPAM" or "START SPAM"
 if spamming then
  task.spawn(function()
   while spamming do
 fire()
 local t=tonumber(speedBox.Text) or 0.15
 task.wait(math.clamp(t,0.03,2))
end
  end)
 end
end)
